pipeline{
    agent any
    environment{
        IMAGE_NAME="hothaifaz11/ado-backend"
    }   
    stages{
        stage("build docker image"){
            
            steps{
                script{
                env.IMAGE_TAG = "v${BUILD_NUMBER}-${GIT_COMMIT.take(5)}"
            }
                withCredentials([usernamePassword(
            credentialsId: 'hodi-docker',
            usernameVariable: 'DOCKER_USER',
            passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                    docker build -t ${IMAGE_NAME}:$IMAGE_TAG -t ${IMAGE_NAME}:latest .
                    echo ****** login to docker hub ******
                    
                    echo "${DOCKER_PASS}" | docker login -u "${DOCKER_USER}" --password-stdin

                    echo ****** push to docker hub ******

                    docker push ${IMAGE_NAME}:$IMAGE_TAG
                    docker push ${IMAGE_NAME}:latest
                    '''
                }
            }
        }
        stage("clone gitops repo"){
            steps{
                sh 'git clone https://github.com/hothaifa96/devops'
                
                sh'''
                cd devops
                ls
                cd ado-manifests/backend
                ls
                sed -i 's/image: ${IMAGE_NAME}:.*/image: ${IMAGE_NAME}:${IMAGE_TAG}/' manifest.yml

                git add .
                git commit -m "updatge image tag ${IMAGE_TAG}"
                '''
                 withCredentials([usernamePassword(credentialsId: 'hodi-git', 
                                          passwordVariable: 'GIT_PASSWORD', 
                                          usernameVariable: 'GIT_USERNAME')]) {
            sh '''
            cd devops
                git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com main
            '''
        }
                sh 'rm -fr devops'
            }
        }
    }
}

